<%- include("../partials/header") %>

    <div class="container">
        <h1>
            Create a New Property
        </h1>
        <div class="card">
            <div class="card-header">
                Fill the form
            </div>

            <form class="m-3" action="/properties" method="POST">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Property Name</label>
                    <input class="form-control" type="text" name="propertyName" placeholder="property name">
                </div>
				<div class="form-group">
                    <label for="exampleFormControlInput1">Image url</label>
                    <input class="form-control" type="text" name="propertyImg" placeholder="img url">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Property Type</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Description</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" type="text" rows="3" name="propertyDesc"></textarea>
                </div>
				<input class="btn btn-primary" type="submit" value="Submit">
            </form>
        </div>
			<a href="/properties">Go Back</a>
    </div>

    <%- include("../partials/footer") %>