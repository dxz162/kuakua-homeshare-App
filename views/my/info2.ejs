    <div class="container register-form">
		<%- include('../partials/messages'); %>
		<form action="/my/info2" method="POST" >	
            <div class="input-group">
                <span class="input-group-addon" >邮箱</span>
				<input type="email" 
				class="form-control" 
				value="<%= email %>" 
				id="email" 
				aria-describedby="email" 
				readonly = "readonly">
            </div>
        
            <div class="input-group">
                <span class="input-group-addon" >姓名</span>
				<input type="text" 
				class="form-control" 
				id="name"
				aria-describedby="password" 
				name="name"
				value="<%= typeof name != 'undefined' ? name : '' %>">
			</div>
			
			<div class="input-group">
                <span class="input-group-addon" >电话</span>
				<input type="number" 
				class="form-control" 
				id="password" 
				aria-describedby="password" 
				name="phone"
				value="<%= typeof phone != 'undefined' ? phone : '' %>">
			</div>

			<div class="input-group">
                <span class="input-group-addon" >年龄</span>
				<input type="number" 
				class="form-control" 
				id="password" 
				aria-describedby="password" 
				name="age"
				value="<%= typeof age != 'undefined' ? age : '' %>">
			</div>

			<div class="input-group">
				<span class="input-group-addon" >性别</span>
				<select class="selectpicker" data-style="btn-info" name="sex">
					<optgroup label="性别">
						<option name="table1" value="male">男</option>
						<option name="table2" value="female">女</option>
					</optgroup>
				</select>
			</div>
			
			<div class="input-group">
                <span class="input-group-addon" >地址</span>
				<input type="text" 
				class="form-control" 
				id="password" 
				aria-describedby="password" 
				name="address"
				value="<%= typeof address != 'undefined' ? address : '' %>">
			</div>

            <div class="button">
                <button type="submit" class="btn btn-default btn-lg">提交修改</button>
            </div>
        </form>       
    </div>

	<script src="../jquery/jquery-3.5.1.min.js"></script>
	<script src="../bootstrap/bootstrap3/js/bootstrap.min.js"></script>
