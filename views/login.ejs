<!DOCTYPE html>
<html>
<head>
	<title>Login</title>
	
	<link rel="stylesheet" href="bootstrap/bootstrap3/css/bootstrap.min.css"/>
	<link rel="stylesheet" type="text/css" href="stylesheets/login.css">
</head>
<body>

	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-toggler" aria-expanded="false">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a href="#" class="navbar-brand"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span> 夸夸组</a>
			</div>
			<div class="collapse navbar-collapse" id="nav-toggler">
				<ul class="nav navbar-nav">
					<li><a href="/">主页</a></li>
					<li><a href="#">联系我们</a></li>
				</ul>
			</div>
		</div>
    </nav>
    
    <div class="container login-form">
		<%- include('./partials/messages'); %>
        <form action="/login" method="POST">
            <div class="input-group">
                <span class="input-group-addon">邮箱</span>
				<input type="text" 
				class="form-control" 
				placeholder="邮箱" 
				name="email" 
				id="email" 
				aria-describedby="email">
            </div>
    
            <div class="input-group">
                <span class="input-group-addon">密码</span>
				<input type="password" 
				class="form-control" 
				placeholder="密码" 
				name="password" 
				id="password" 
				aria-describedby="password">
            </div>

            <div class="button">
                <button type="submit" class="btn btn-default btn-lg">登录</button>
            </div>
        </form>       
    </div>

	<script src="jquery/jquery-3.5.1.min.js"></script>
	<script src="bootstrap/bootstrap3/js/bootstrap.min.js"></script>
</body>
</html>

